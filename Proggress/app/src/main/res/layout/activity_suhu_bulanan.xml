<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suhu.Suhu_Bulanan">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/KuningBeeseet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grafik Bulanan"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.github.lzyzsd.circleprogress.DonutProgress

                android:id="@+id/donut_progress_bulanan"
                android:layout_width="260dp"
                android:layout_height="260dp"


                />


            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view_bulanan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="10dp" />


        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/suhu_loading_bulanan"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:elevation="10dp"
        android:indeterminateTint="@color/KuningBeeseet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>